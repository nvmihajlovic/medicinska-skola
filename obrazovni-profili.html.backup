    <script src="script.js"></script>
    <script>
        // Табови по секцијама (локално по групи табова)
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.subjects-tabs').forEach(function (tabsRoot) {
                const buttons = tabsRoot.querySelectorAll('.tab-btn');
                const panels  = tabsRoot.querySelectorAll('.tab-panel');

                buttons.forEach(btn => {
                    btn.addEventListener('click', function () {
                        // деактивирај у овој групи
                        buttons.forEach(b => b.classList.remove('active'));
                        panels.forEach(p => p.classList.remove('active'));

                        // активирај изабрани таб и панел
                        this.classList.add('active');
                        const id = this.getAttribute('data-tab');
                        const panel = tabsRoot.querySelector('#' + id);
                        if (panel) panel.classList.add('active');
                    });
                });
            });

            // година у футеру (ако већ није у script.js)
            var y = document.getElementById('current-year');
            if (y) y.textContent = new Date().getFullYear();
        });
    </script>
