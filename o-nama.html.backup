    <script src="script.js"></script>
    <script>
        // Tekuća godina (ako već nije у script.js)
        (function(){var y=document.getElementById('current-year'); if(y) y.textContent=new Date().getFullYear();})();
        
        // Language Switcher - prikaži samo u Hero/Page Header sekciji
        document.addEventListener('DOMContentLoaded', function() {
            const languageSwitcher = document.getElementById('language-switcher') || document.querySelector('.language-switcher');
            const heroSection = document.querySelector('.hero') || document.querySelector('.page-header');
            
            if (languageSwitcher && heroSection) {
                window.addEventListener('scroll', function() {
                    const heroBottom = heroSection.offsetTop + heroSection.offsetHeight;
                    const scrollPosition = window.scrollY;
                    
                    if (scrollPosition < heroBottom) {
                        languageSwitcher.style.opacity = '1';
                        languageSwitcher.style.visibility = 'visible';
                    } else {
                        languageSwitcher.style.opacity = '0';
                        languageSwitcher.style.visibility = 'hidden';
                    }
                });
            }
            
            // Back to Top Button
            const backToTopBtn = document.getElementById('back-to-top');
            if (backToTopBtn) {
                window.addEventListener('scroll', function() {
                    if (window.pageYOffset > ((document.documentElement.scrollHeight - window.innerHeight) / 2)) {
                        backToTopBtn.classList.add('visible');
                    } else {
                        backToTopBtn.classList.remove('visible');
                    }
                });
                
                backToTopBtn.addEventListener('click', function() {
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
            }
        });
    </script>
